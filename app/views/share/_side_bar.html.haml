.side-bar
  .header
    .header__name
      = current_user.name
    .header__setion
      = link_to new_group_path,class: "icon" do
        = icon('fa', 'edit')
      = link_to edit_user_path(current_user),class: "icon" do
        = icon('fas', 'cog')
  .contents 
    - current_user.groups.each do |group|
      .groups
        = link_to group_messages_path(group) do
          .contents__group
            = group.name
          .contents__group1
            = group.show_last_message